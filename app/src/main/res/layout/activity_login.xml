<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/aware"
        android:layout_width="148.9dp"
        android:layout_height="30.3dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="113.1dp"
        android:layout_marginLeft="113.1dp"
        android:layout_marginTop="88dp"
        android:src="@drawable/fill_1" />

    <EditText
        android:id="@+id/username"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/aware"
        android:layout_marginHorizontal="62.5dp"
        android:layout_marginTop="77.7dp"
        android:background="@drawable/bg_username"
        android:hint="@string/username"
        android:paddingLeft="15dp"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/username"
        android:layout_marginHorizontal="62.5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_username"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginHorizontal="62.5dp"
        android:layout_marginTop="22.5dp">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="@string/remember_me"
            android:textColor="#222222"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37.5dp"
            android:text="@string/forgot_password"
            android:textColor="#222222"
            android:textSize="12sp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:textAllCaps="false"
        android:layout_below="@+id/choose"
        android:layout_marginHorizontal="62.5dp"
        android:layout_marginTop="22.5dp"
        android:background="@drawable/bg_login"
        android:text="@string/button_login" />

    <TextView
        android:id="@+id/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginHorizontal="143dp"
        android:layout_marginTop="26.5dp"
        android:text="@string/or_connect_with"
        android:textColor="#b2b2b2"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/fb"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/connect"
        android:layout_marginLeft="62.5dp"
        android:layout_marginTop="29.5dp"
        android:src="@drawable/fb"></ImageView>

    <ImageView
        android:id="@+id/tw"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/connect"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="29.5dp"
        android:layout_marginRight="62.5dp"
        android:layout_toRightOf="@+id/fb"
        android:src="@drawable/tw" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="@string/sign_up_with_e_mail"
        android:gravity="center"
        android:textColor="#1f4ba5"
        android:layout_below="@+id/tw"
        android:layout_marginTop="85.5dp"
        android:layout_marginHorizontal="62.5dp"
        android:background="@drawable/bg_sign_up"
        />


</RelativeLayout>